<style>
    .logincontainer {
        width: 410px;
        margin: 20% auto;
        border: 1px solid #999;
        padding: 0px 12px;
        border-radius: 10px;
    }

    h3 {
        background: #01325A;
        margin: 0px;
        padding: 10px 0px;
        text-align: center;
        color: white;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        margin-bottom: 32px;
    }

    .form-actions {
        margin-bottom: 0px;
    }
</style>
<div class="content logincontainer" ng-controller="LoginController">
    <!-- Login Formular -->
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-vertical login-form", @autocomplete = "off" }))
    {
                <!-- Title -->
        <h3 class="form-title">Sign In to your Account</h3>
                <!-- Error Message -->
        <div class="alert fade in alert-danger" style="display: none;">
            <i class="icon-remove close" data-dismiss="alert"></i>
            Enter any username and password.

        </div>
        <div class="login-container">
            @if (Html.ValidationSummary(true) != null)
            {
                <div class="login-error alert fade in alert-danger">
                    <i class="icon-remove close" data-dismiss="alert"></i>
                    @Html.ValidationSummary(true)
                </div>
            }
            <div class="login-frm-container">
                @*@using (Html.BeginForm("Login","Account",FormMethod.Post, new {@class="form-vertical login-form",@autocomplete = "off" }))
                    {*@
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @*<div class="login-label">
                            @Html.LabelFor(model => model.UserName)
                        </div>*@
                    <div class="input-icon">
                        <i class="icon-user"></i>
                        <input type="text" id="userName" class="form-control input-sm chat-input" placeholder="username" ng-model="UserName" ng-required="true" />
                        @*@Html.TextBoxFor(model => model.Login.UserName, new { @class = "form-control", @placeholder = "Username", data_rule_required = "true", @id = "txtUsername" })
