
<div ng-controller="ClassSectionIndexController">
    <div class="clearfix"></div>

    <div class="col-sm-6">
        <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm.className.$invalid }">
            <label class="control-label">
                Class Name<span class="error">*</span>
            </label>
        </div>
        <div class="col-md-6 col-sm-6">
            <select name="classSelect" id="class" class="selectpicker" ng-model="data.classmodel">
                <option ng-repeat="option in classes2" value="{{option.id}}">{{option.className}}</option>
            </select>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm.sectionmodel.$invalid }">
            <label class="control-label">Select Sections<span class="error">*</span></label>
        </div>
        <div class="col-md-6 col-sm-6">
            <select name="sectionSelect" id="section" ng-model="data.sectionmodel" multiple>
                <option ng-repeat="option in sections2" value="{{option.id}}">{{option.sectionName}}</option>
            </select>
        </div>
    </div>


    <div class="clearfix"></div>
    <div class="col-sm-8 col-sm-offset-4" style="margin-top:20px;">
        <button style="width: 100px; height: 30px; margin-right:10px;" class="btn" id="Button5" type="button" ng-click="SaveClassSections(data.classmodel,data.sectionmodel);">
            <span>Save</span>
        </button>
    </div>
</div>
