                        <input type="text" class="form-control" ng-model="Parent.lastName" ng-required="true" name="parentlastName" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm.parentRelation.$invalid }">
                        <label class="control-label">
                            Relation with Student<span class="error">*</span>
                        </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" ng-model="Parent.relation" ng-required="true" name="parentRelation" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm.parentEmail.$invalid }">
                        <label class="control-label">
