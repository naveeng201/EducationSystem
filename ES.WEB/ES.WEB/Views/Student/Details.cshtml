                                mask: true,
                                defaultDate: new Date()
                            });
                        </script>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm.parentEducation.$invalid }">
                        <label class="control-label">
                            Education<span class="error">*</span>
                        </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" ng-model="Parent.education" ng-required="true" name="parentEducation" />
                    </div>
