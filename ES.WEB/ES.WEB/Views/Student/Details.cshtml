<script src="~/Scripts/underscore-min.js"></script>

 <style>
    .content {
        margin: 10px 0 0 10px;
    }

    .tab {
        padding-top: 40px;
    }
</style>


<div class="content" ng-controller="StudentDetailsController">
   
    <div class="clearfix"></div>
    <div class="form-horizontal">
        <ul class="nav nav-tabs">
            <li ng-repeat="step in steps" ng-class="{active: $index==getCurrentStepIndex()}">
                <a href="javascript:void(0)" ng-click="goToStep($index)">{{step}}</a>
            </li>
        </ul>
        <!-- Basic  TAB-1 -->
        <div ng-show="tab==0">
            <div style="padding-top: 45px;">
                <b style="padding-left:7px;">Basic Details</b>
                <div style="border-bottom: 1px solid #e5e5e5;"></div>
                <div style="padding-top:15px;"></div>
                <div class="clearfix"></div>
               
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm.firstName.$invalid }">
                        <label class="control-label">
                            First Name<span class="error">*</span>
                        </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" ng-model="Student.firstName" ng-required="true" name="firstName" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm.middleName.$invalid }">
                        <label class="control-label">
                            Middle Name<span class="error">*</span>
                        </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" ng-model="Student.middleName" ng-required="true" name="middleName" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm.lastName.$invalid }">
                        <label class="control-label">
                            Last Name<span class="error">*</span>
                        </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" ng-model="Student.lastName" ng-required="true" name="lastName" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm.phoneNo.$invalid }">
                        <label class="control-label">
                            Phone No.<span class="error">*</span>
                        </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" ng-model="Student.phoneNo" ng-required="true" name="phoneNo" />
                    </div>
                </div>

                
            </div>
        </div>

        <div ng-show="tab==1" ng-class="{ 'has-error': false }">
             <div style="padding-top: 45px;">
                <b style="padding-left:7px;">Additional Details</b>
                <div style="border-bottom: 1px solid #e5e5e5;"></div>
                <div style="padding-top:15px;"></div>
                <div class="clearfix"></div>
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm2.studentdob.$invalid }">
                        <label class="control-label">
                            Date Of Birth<span class="error">*</span>
                        </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" ng-model="StudentAdditionalInfo.dob" ng-required="false" name="studentdob" id="studentdob" readonly />
                        <script type="text/javascript">
                            $('#studentdob').datetimepicker({
                            format: 'd/m/Y',
                            timepicker: false,
                            maxDate: $("#studentdob").val(),
                            numberOfMonths: 2,
                            mask: true,
                            defaultDate: new Date()
                            });
                        </script>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm2.gender.$invalid }">
                        <label class="control-label">
                            Gender<span class="error">*</span>
                        </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" ng-model="StudentAdditionalInfo.gender" ng-required="false" name="gender" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm2.bloodGroup.$invalid }">
                        <label class="control-label">
                            Blood Group<span class="error">*</span>
                        </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" ng-model="StudentAdditionalInfo.bloodGroup" ng-required="false" name="bloodgroup" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm2.birthPlace.$invalid }">
                        <label class="control-label">
                            Birth Place<span class="error">*</span>
                        </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" ng-model="StudentAdditionalInfo.birthPlace" ng-required="false" name="birthplace" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm2.nationalty.$invalid }">
                        <label class="control-label">
                            Nationalty<span class="error">*</span>
                        </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" ng-model="StudentAdditionalInfo.nationalty" ng-required="false" name="nationalty" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm2.religion.$invalid }">
                        <label class="control-label">
                            Religion<span class="error">*</span>
                        </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" ng-model="StudentAdditionalInfo.religion" ng-required="false" name="religion" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="col-md-6 col-sm-6" ng-class="{ 'has-error': ESForm2.language.$invalid }">
                        <label class="control-label">
                            Languages<span class="error">*</span>
                        </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" ng-model="StudentAdditionalInfo.language" ng-required="false" name="language" />
                    </div>
                </div>
                @*<div class="col-sm-8 col-sm-offset-4" style="margin-top:20px;">
                    <button style="width: 100px; height: 30px; margin-right:10px;" class="btn" id="Button5" type="button" ng-disabled="!ESForm.$valid" ng-click="InsertStudentAdditionalInfo();">
                        <span>Save</span>
                    </button>
                    <button style="width: 100px; height: 30px;" class="btn" id="Button6" type="button" ng-click="GoBack();">
                        <span>Back</span>
                    </button>
                </div>*@
            </div>
        </div>
        <!--Parent Details-->
        <div ng-show="tab==2" ng-class="{ 'has-error': false }">
            <div style="padding-top: 45px;">
                <b style="padding-left:7px;">Parent Details</b>
